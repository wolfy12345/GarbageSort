#header {
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 180rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.08);
    z-index: 999;
}

#currentCity {
    position: absolute;
    left: 25rpx;
    top: 20rpx;
    height: 80rpx;
}

#location {
    margin: 24rpx 0rpx 0rpx 0rpx;
    width: 24rpx;
    height: 32rpx;
}

#city {
    margin: 0rpx 0rpx 0rpx 10rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 80rpx;
}

#fakeSearch {
    position: absolute;
    left: 140rpx;
    top: 20rpx;
    right: 25rpx;
    padding: 0px 72rpx 0px 76rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
}

#magnifier {
    position: absolute;
    left: 25rpx;
    top: 24rpx;
    width: 32rpx;
    height: 32rpx;
}

#fakeSearch text {
    color: #808080;
    font-size: 32rpx;
    line-height: 80rpx;
}

#broadcast {
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 60rpx;
    background-color: rgba(250,189,38,0.1);
    overflow: hidden;
}

#broadcast text {
    display: block;
    color: #8e6b15;
    font-size: 26rpx;
    line-height: 60rpx;
    white-space: nowrap;
    animation: broadcast 18000ms linear infinite;
}

#overlay {
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    background-color: rgba(0,0,0,0.3);
    z-index: 1800;
}

#chooseCity {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 600rpx;
    height: 800rpx;
    border-radius: 20rpx;
    background-color: #ffffff;
    transform: translate(-50%,-50%);
    z-index: 1801;
}

#chooseCityCurrent {
    height: 100rpx;
}

#chooseCityCurrent image {
    margin-left: 30rpx;
    margin-top: 35rpx;
    width: 23rpx;
    height: 30rpx;
}

#chooseCityCurrent text {
    margin-left: 15rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 100rpx;
}

#cities {
    border-top: 1px solid #eeeeee;
    border-bottom: 1px solid #eeeeee;
    height: 670rpx;
    box-sizing: border-box;
}

.setting-item {
    position: relative;
    padding-left: 1em;
    border-bottom: 1px solid #f0f0f0;
    background-color: #ffffff;
    font-size: 30rpx;
    line-height: 3em;
}

.setting-item:last-child {
    border-bottom: none;
}

.checked::after {
    content: "";
    position: absolute;
    right: 35rpx;
    top: 32rpx;
    width: 30rpx;
    height: 15rpx;
    border-left: 2px solid #fabd26;
    border-bottom: 2px solid #fabd26;
    transform: rotate(-45deg);
}

@-webkit-keyframes broadcast {
    0% {
        margin-left: 100%;
    }

    100% {
        margin-left: -30em;
    }
}

@keyframes broadcast {
    0% {
        margin-left: 100%;
    }

    100% {
        margin-left: -30em;
    }
}




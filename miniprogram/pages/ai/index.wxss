#qrDownloadOverlay {
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 2002;
}

#qrDownloadWrapper {
    position: fixed;
    left: 50%;
    top: 50%;
    width: 600rpx;
    height: 775rpx;
    border-radius: 10px;
    background-color: #ffffff;
    transform: translate(-50%,-50%);
    z-index: 2003;
    animation: pop 250ms;
}

#qrDownloadWrapper>image {
    display: block;
    margin-left: 75rpx;
    margin-top: 75rpx;
    width: 450rpx;
    height: 450rpx;
}

#qrDownloadWrapper button {
    margin-left: 75rpx;
    margin-top: 75rpx;
    width: 450rpx;
    height: 100rpx;
    border-radius: 50rpx;
    background-color: #64a814;
    color: #ffffff;
    font-size: 32rpx;
    line-height: 100rpx;
}

#qrDownloadWrapper button::after {
    border: none;
}

#hideQr {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

#hideQr::before,#hideQr::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 40rpx;
    height: 4rpx;
    border-radius: 2rpx;
    background-color: #cccccc;
}

#hideQr::before {
    transform: translate(-50%,-50%) rotate(45deg);
}

#hideQr::after {
    transform: translate(-50%,-50%) rotate(-45deg);
}
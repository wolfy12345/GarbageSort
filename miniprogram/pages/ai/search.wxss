#searchWrapper {
    position: fixed;
    width: 100%;
    height: 120rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.08);
    z-index: 999;
}

#search {
    position: absolute;
    left: 25rpx;
    top: 20rpx;
    padding: 0px 72rpx 0px 76rpx;
    width: 620rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
    font-size: 32rpx;
    line-height: 1em;
    transition: all 200ms;
}

#magnifier {
    position: absolute;
    left: 50rpx;
    top: 44rpx;
    width: 32rpx;
    height: 32rpx;
}

#clearSearchText {
    position: absolute;
    left: 593rpx;
    top: 60rpx;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    background-color: #cccccc;
    transform: translateY(-50%);
}

#clearSearchText::before,#clearSearchText::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 64%;
    height: 4rpx;
    border-radius: 3rpx;
    background-color: #f5f5f5;
}

#clearSearchText::before {
    transform: translate(-50%,-50%) rotate(45deg);
}

#clearSearchText::after {
    transform: translate(-50%,-50%) rotate(-45deg);
}

#cancelSearch {
    position: absolute;
    left: 697.5rpx;
    top: 60rpx;
    width: 100rpx;
    color: #333333;
    font-size: 32rpx;
    text-align: center;
    transform: translate(-50%,-50%);
}

